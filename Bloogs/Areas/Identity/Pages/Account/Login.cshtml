@page
@model LoginModel
@using Microsoft.Extensions.Localization
@using Bloogs
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IStringLocalizer<Bloogs> Localizer
@{
    ViewData["Title"] = @Localizer["Login"];
}

<section class="vh-100 gradient-custom">
    
    <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <div class="mb-md-5 mt-md-4 pb-5">
                        <form id="account" method="post">
                            <h2 class="fw-bold mb-2 text-uppercase">@Localizer["Login"]</h2>
                            <p class="text-white-50 mb-5">@Localizer["UseALocalAccountToLogin"]</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-outline form-white mb-4">
                                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label" for="typeEmailX">@Localizer["Email"]</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label">@Localizer["Password"]</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="form-check mb-0">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Localizer["Remember"]
                                    </label>
                                </div>
                                   
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Login"]</button>
                            </div>
                            <div>
                                <p class="small mb-5 pb-lg-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword">@Localizer["ForgotPassword"]</a>
                                </p>
                                <p class="small mb-5 pb-lg-2">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Register"]</a>
                                </p>
                                        
                                <p class="small mb-5 pb-lg-2">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@Localizer["ResendEmailConfirmation"]</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
            
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
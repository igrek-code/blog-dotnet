@using Bloogs.Models
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Bloogs> Localizer
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = @Localizer["UserRoleManagement"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@Localizer["UseRoleTitle"]</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["FirstName"]</th>
            <th>@Localizer["LastName"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Roles"]</th>
            <th>@Localizer["Action"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Supervisor" asp-action="SpecificUserRole" asp-route-userId="@user.UserId">@Localizer["EditUserRole"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>

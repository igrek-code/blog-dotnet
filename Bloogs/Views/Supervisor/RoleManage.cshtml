@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Bloogs> Localizer
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Role Manager</h1>
<form method="post" asp-action="AddRole" asp-controller="Supervisor">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">@Localizer["AddNewRole"]</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-action="DeleteRole" asp-controller="Supervisor">
                        <div class="input-group">
                            <input name="roleId" value="@role.Id" hidden>
                            <span class="input-group-btn">
                                <button class="btn btn-danger">@Localizer["Delete"]</button>
                            </span>
                        </div>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>